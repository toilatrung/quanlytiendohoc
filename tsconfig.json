{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],

    // ✅ Thêm cấu hình alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
